{
  "name": "hive-api",
  "version": "0.0.1",
  "description": "a wrapper for the hivemc api",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node build/index.js",
    "test": "tsc && mocha **/*.test.js",
    "build": "tsc",
    "docs": "typedoc --out docs --name \"Hive-Api-Node\" --target ES6 --mode file --excludeExternals",
