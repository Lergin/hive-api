  },
  "author": "Malte Laukoetter",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "chai": "^4.0.0",
    "mocha": "^3.4.2",
    "rewire": "^2.5.2",
    "ts-node": "^3.0.4",
    "typedoc": "^0.7.1"
  }
}
